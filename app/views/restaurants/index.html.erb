<div class="container text-center">
  <h1>List of all Restaurants</h1>

  <ul>
    <% @restaurants.each do |restaurant| %>
          <p> <%= link_to restaurant.name, restaurant_path(restaurant) %> </p>
    <% end %>
  </ul>

  <%= link_to "Add a restaurant", new_restaurant_path, class: 'btn btn-success rounded my-2' %>
</div>
